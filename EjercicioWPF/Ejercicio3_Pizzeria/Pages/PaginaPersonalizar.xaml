<Page x:Class="Ejercicio3_Pizzeria.Pages.PaginaPersonalizar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ejercicio3_Pizzeria.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="PaginaPersonalizar">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Elige ingredientes adicionales: " HorizontalContentAlignment="Center" FontSize="18"/>
        </StackPanel>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" Grid.Row="1">
            <CheckBox x:Name="chQueso" Content="Queso extra"/>
            <CheckBox x:Name="chJamon" Content="Jamón"/>
            <CheckBox x:Name="chAceitunas" Content="Aceitunas"/>
            <CheckBox x:Name="chChamp" Content="Champiñones"/>
            <CheckBox x:Name="chPimientos" Content="Pimientos"/>
        </WrapPanel>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Center">
            <Button x:Name="btnVolverInicio" Content="Volver" Margin="10" Height="20" Width="100" Click="btnVolverInicio_Click"/>
            <Button x:Name="btnSiguienteConfirmar" Content=" Siguiente" Margin="10" Height="20" Width="100"/>
        </WrapPanel>
    </Grid>
</Page>
