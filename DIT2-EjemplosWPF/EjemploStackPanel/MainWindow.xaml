<Window x:Class="EjemploGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjemploGrid"
        mc:Ignorable="d"
        Title="Ejemplo Stack Panel" Height="450" Width="800" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <Label Content="FORMULARIO ACCESO A DATOS DEL SISTEMA"
               FontSize="15" 
               FontWeight="ExtraBlack" 
               Margin="0,20,0,20"
               HorizontalAlignment="Center"
               Background="Azure"/>

        <TextBlock Text="Usuario: "
            HorizontalAlignment="center"/>
        <TextBox x:Name="txtUsuario"
            Width="100"
            Margin="0,0,0,20"/>
        <TextBlock Text="Contraseña: "
            HorizontalAlignment="center"/>
        <PasswordBox x:Name="txtPass"
            Width="100"
            Margin="0,0,0,20"/>
        <Button x:Name="btnEnviar"
            Content="Enviar"
            Width="80"
            Height="20"
            Margin="0,0,0,20" Click="btnEnviar_Click"
            />
        <Button x:Name="btnLimpiar"
            Content="Limpiar"
            Width="80"
            Height="20" Click="btnLimpiar_Click"
            />
        

    </StackPanel>
</Window>
