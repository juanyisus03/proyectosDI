<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemplosVentanas.FlyoutPages.FlyoutPageDemo"
             >


    
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <FlexLayout Direction="Column">
                <Label Text="Inicio" TextColor="blue" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Text="Pagina2" TextColor="blue" HorizontalOptions="Center" VerticalOptions="Center"/>
            </FlexLayout>
        </ContentPage>
    </FlyoutPage.Flyout>


    <FlyoutPage.Detail>
        <ContentPage>
            <VerticalStackLayout Padding="30,0" Spacing="25">
                <Label Text="DETALLES DE INICIO" />
                <Image Source="dotnet_bot.png" HeightRequest="185" Aspect="AspectFit" />
                <Label Text="Hello, World!"/>
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Detail>

</FlyoutPage>
