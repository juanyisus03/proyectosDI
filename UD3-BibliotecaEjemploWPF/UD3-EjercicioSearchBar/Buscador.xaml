<UserControl x:Class="UD3_EjercicioSearchBar.Buscador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UD3_EjercicioSearchBar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Border BorderBrush="Black" BorderThickness="1" Width="170" CornerRadius="20">
            <Canvas Height="20" HorizontalAlignment="Center" Width="150">
                <Image Source="/UD3-EjercicioSearchBar;component/lupa.png" Height="20" Canvas.Left="0" Canvas.Top="0" IsHitTestVisible="False"/>
                <TextBox x:Name="txtBuscador" Canvas.Left="20" Width="100" Canvas.Top="0" TextChanged="txtBuscador_TextChanged"/>
                <Button x:Name="btnBorrar" Canvas.Left="130" Canvas.Top="-2" Background="{x:Null}" Visibility="Hidden" Click="btnBorrar_Click" BorderBrush="{x:Null}" Foreground="{x:Null}">
                    <Image Source="/UD3-EjercicioSearchBar;component/cancelar.png" Height="20" Stretch="Uniform"/>
                </Button>
            </Canvas>
        </Border>
    </StackPanel>
</UserControl>
