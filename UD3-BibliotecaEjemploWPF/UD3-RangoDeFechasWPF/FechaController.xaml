<UserControl x:Class="UD3_RangoDeFechasWPF.FechaController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UD3_RangoDeFechasWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        
        <TextBlock Text="Fecha Inicio:" TextDecorations="Underline" FontWeight="bold" FontSize="12"/>
        
        <DatePicker x:Name="dpFechaIni" SelectedDateChanged="DatePicker_SelectedDateChanged" />
        
        <TextBlock Text="Fecha Fin:" TextDecorations="Underline" FontWeight="bold" FontSize="12"/>

        <DatePicker x:Name="dpFechaFin" SelectedDateChanged="DatePicker_SelectedDateChanged" />
        
        <Label x:Name="lbComprobarFecha"/>
        
    </StackPanel>
</UserControl>
