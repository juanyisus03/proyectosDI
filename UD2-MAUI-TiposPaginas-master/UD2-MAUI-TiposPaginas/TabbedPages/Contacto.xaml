<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UD2_MAUI_TiposPaginas.TabbedPages.Contacto"
             Title="Contacto">
    
    <StackLayout Padding="20">
        <Label Text="Contacto del Taller" 
            FontSize="Large" 
            HorizontalOptions="Center" 
            Margin="0, 0, 0, 20" />

        <Label Text="Teléfono:" FontAttributes="Bold"/>
        <Label Text="+34 123 456 789" />

        <Label Text="Correo Electrónico:" FontAttributes="Bold" 
            Margin="0,10,0,0"/>
        <Label Text="contacto@tallermecanico.com" />

        <Label Text="Dirección:" FontAttributes="Bold" 
            Margin="0,10,0,0"/>
        <Label Text="Calle Falsa 123, 28080, Madrid, España" />

        <Button Text="Llamar Ahora" 
             BackgroundColor="#4CAF50" 
             TextColor="White" 
             Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>