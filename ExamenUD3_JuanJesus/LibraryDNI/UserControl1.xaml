<UserControl x:Class="LibraryDNI.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryDNI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <StackPanel>
        <WrapPanel HorizontalAlignment="Center">
            <Label Content="DNI del Cliente:" Margin="0,0,10,0"/>
            <TextBox x:Name="txtDNI" Width="150"/>
            <Label Content="-" FontWeight="ExtraBold" Margin="10,0,10,0"/>
            <ComboBox Width="75" x:Name="cbLetras" LostFocus="cbLetras_LostFocus" ></ComboBox>
        </WrapPanel>
        <Button x:Name="btnCalcular" Height="30" Width="150" Content="Calcular letra DNI" Margin="10" Click="btnCalcular_Click"/>
    </StackPanel>
</UserControl>
