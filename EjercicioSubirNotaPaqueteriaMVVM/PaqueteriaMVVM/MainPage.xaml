<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaqueteriaMVVM.MainPage" BackgroundColor="LightGray">

    <ScrollView>
        <VerticalStackLayout HorizontalOptions="CenterAndExpand">

            <Label Text="Gestión de Paquetería" FontSize="Header"/>

            <Border StrokeThickness="5">
                <VerticalStackLayout>
                    <Label Text="Agregar nuevo Paquete" TextColor="Aquamarine" FontSize="Default"/>
                   
                    <Entry Placeholder="Descripcion del Paquete"/>

                    <Picker ItemsSource="{Binding opciones}"/>

                    <Button Text="Agregar Paquete" WidthRequest="100" TextColor="White" BackgroundColor="dark"/>

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
